{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AnyMobile Print Helper",
  "identifier": "com.anymobile.print-helper",
  "version": "1.0.19",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "AnyMobile Print Helper",
        "width": 400,
        "height": 300,
        "resizable": false,
        "center": true,
        "visible": true,
        "decorations": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "shortDescription": "Print helper for AnyMobile labels",
    "longDescription": "Desktop print helper for AnyMobile label printing with correct settings (no scaling, high quality)",
    "category": "Utility"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/ronrcruz/anymobile-print-helper/releases/latest/download/latest.json"
      ],
